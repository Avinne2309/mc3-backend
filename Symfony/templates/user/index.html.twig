{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container mt-5">
            <h1 class="mb-4 text-center">User Index</h1>

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles is iterable ? user.roles|join(', ') : user.roles }}</td>
                        <td class="text-truncate" style="max-width: 150px;">Hidden</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a href="{{ path('app_user_new') }}" class="btn btn-success">Create New</a>
            </div>

            <div class="text-center mt-4">
                <br>
                <a href="{{ path('app_logout') }}" class="btn btn-danger mt-3">Logout</a>
            </div>
        </div>
    {% else %}
        <div class="container text-center mt-5">
            <h1>You are not authenticated</h1>
            <p>Please <a href="{{ path('app_login') }}">login</a> to view this page.</p>
        </div>
    {% endif %}
{% endblock %}