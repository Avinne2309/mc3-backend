{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">User Details</h1>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Password</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('user/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
    </div>
{% endblock %}
