{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">User Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">First Name</th>
                            <td>{{ user.firstName }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Last Name</th>
                            <td>{{ user.lastName }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Mobile Number</th>
                            <td>{{ user.mobileNumber }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Landline Number</th>
                            <td>{{ user.landlineNumber }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Company Email</th>
                            <td>{{ user.companyEmail }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Company Website</th>
                            <td>{{ user.companyWebsite }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Company Contact Number</th>
                            <td>{{ user.companyContactNumber }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary mr-2"><i class="fas fa-list"></i> Back to list</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning mr-2"><i class="fas fa-edit"></i> Edit</a>
            <a href="{{ path('app_user_profile', {'id': user.id}) }}" class="btn btn-primary mr-2"><i class="fas fa-user"></i> Profile</a>
            {{ include('user/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIqVQ+PCoSK1T+zF13zKp5BA6m+ZpDlA9h5ajKh9uK/s5+hp8bg" crossorigin="anonymous"></script>
{% endblock %}