{% extends 'base.html.twig' %}

{% block title %}Profile Card 2{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css" integrity="sha384-wWgnbELXtknlbONm/TyH04wV8t5jRQBJl1gl7nGScx4PQdhSuw3abvw1lg5XkUtP" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/main2.css') }}">
{% endblock %}

{% block body %}
    <div class="card-container">
        <div class="card">
            <div class="card-header">
                <img src="https://i.ibb.co/x2rm0tp/Anonymous-bg.png" alt="Header Image" class="header-img">
                <img src="https://placehold.co/400" class="profile-pic" alt="Profile Picture">
            </div>
            <div class="card-body text-center">
                <h2>John David Azaula</h2>
                <p class="position">Moldedcraft Intern</p>

                <div class="toggle-buttons">
                    <button id="personalBtn" class="toggle-btn active"><b>Personal</b></button>
                    <button id="companyBtn" class="toggle-btn"><b>Company</b></button>
                </div>

                <div id="personalInfo" class="contact-info-section" style="align-items: center">
                    <h4 class="label-box"><b>Info</b></h4>
                    <p class="contact-info"><i class="fa fa-envelope"></i> azaula.jdc@shc.edu.ph</p>
                    <p class="contact-info"><i class="fa fa-phone"></i> 0927-xxx-xxxx</p>
                    <p class="contact-info"><i class="fa fa-mobile-screen-button"></i> 0915-xxx-xxxx</p>
                </div>
                <div id="companyInfo" class="contact-info-section" style="display: none;">
                    <h4 class="label-box"><b>Info</b></h4>
                    <p class="contact-info"><i class="fa fa-building"></i> Moldedcraft Consulting</p>
                    <p class="contact-info"><i class="fa fa-phone"></i> 0927-xxx-xxxx</p>
                    <p class="contact-info"><i class="fa fa-mobile-screen-button"></i> 0915-xxx-xxxx</p>
                    <p class="contact-info"><i class="fa fa-globe"></i> moldedcraft.com</p>
                </div>

                <br><p class="description">For business inquiries, email me at:</p>
                <a href="mailto:davidazaula@gmail.com" class="email">davidazaula@gmail.com</a>
            </div>
            <a href="{{ path('app_logout') }}" class="logout-button"><i class="fa fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.6.3/js/foundation.min.js"></script>
    <script>
        document.getElementById('personalBtn').addEventListener('click', function() {
            document.getElementById('personalInfo').style.display = 'block';
            document.getElementById('companyInfo').style.display = 'none';
            this.classList.add('active');
            document.getElementById('companyBtn').classList.remove('active');
        });

        document.getElementById('companyBtn').addEventListener('click', function() {
            document.getElementById('personalInfo').style.display = 'none';
            document.getElementById('companyInfo').style.display = 'block';
            this.classList.add('active');
            document.getElementById('personalBtn').classList.remove('active');
        });
    </script>
{% endblock %}