{% extends 'base.html.twig' %}

{% block title %}Profile Card 1{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.6.3/css/foundation.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cinzel">
    <link rel="stylesheet" href="{{ asset('css/des1.css') }}">
{% endblock %}

{% block body %}
    <div class="grid-container">
        <div class="grid-x align-center">
            <div class="cell small-12 medium-8 large-6">
                <div class="profile-card">
                    <div class="profile-header">
                        <button class="save-button"><i class="fa fa-bookmark fa-lg"></i></button>
                        <div class="profile-image">
                            <a href="https://ibb.co/Gdc0DZ6"><img src="https://i.ibb.co/TwmkGQf/profile.png" alt="Profile Image"></a>
                        </div>
                        <button class="share-button"><i class="fa fa-share-alt fa-lg"></i></button>
                    </div>
                    <h1 class="company" style="font-family: Cinzel"><b>MOLDEDCRAFT</b></h1>
                    <hr class="divider">
                    <h2 class="name">{{ user.firstName }} {{ user.lastName }}</h2>
                    <h3 class="title">MOLDEDCRAFT INTERN</h3>
                    <div class="grid-x contact">
                        <div class="cell small-12 medium-6 personal">
                            <h4 class="label-box" style="font-family: Cinzel"><b>Personal</b></h4>
                            <p class="contact-info"><i class="fa fa-envelope"></i> {{ user.email }}</p>
                            <p class="contact-info"><i class="fa fa-phone"></i> {{ user.landlineNumber }}</p>
                            <p class="contact-info"><i class="fa fa-mobile-screen-button"></i> {{ user.mobileNumber }}</p>
                        </div>
                        <div class="cell small-12 medium-6 company">
                            <h4 class="label-box" style="font-family: Cinzel"><b>Company</b></h4>
                            <p class="contact-info"><i class="fa fa-building"></i> Moldedcraft Consulting</p>
                            <p class="contact-info"><i class="fa fa-envelope"></i> {{ user.companyEmail }}</p>
                            <p class="contact-info"><i class="fa fa-phone"></i> {{ user.companyContactNumber }}</p>
                            <p class="contact-info"><i class="fa fa-globe"></i> {{ user.companyWebsite }}</p>
                        </div>
                    </div>
                    <footer>
                        <p>Â© 2024 MOLDEDCRAFT CONSULTING CORP. <br> ALL RIGHTS RESERVED.</p>
                    </footer>
                </div>
                <a href="{{ path('app_logout') }}" class="logout-button"><i class="fa fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.6.3/js/foundation.min.js"></script>
{% endblock %}